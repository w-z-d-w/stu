/* pages/details/index.wxss */
page {
  background-color: #f2f2f2;
  padding-bottom: 80rpx;
}

.swiper1 {
  width: 100%;
  height: 748rpx;
}

.swiper1 swiper {
  width: 100%;
  height: inherit;
}

.swiperImg {
  width: 100%;
  height: inherit;
}

.swiperImg image {
  width: 100%;
  height: 100%;
}

.details-title {
  padding: 0 20rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.goods-title {
  color: #000;
  font-size: 32rpx;
}

.goods-price {
  padding: 30rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-monery {
  display: flex;
  align-items: flex-end;
}

.present {
  font-size: 34rpx;
  color: red;
}

.original {
  color: #b2aaaa;
  font-size: 26rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}

.people {
  margin-left: 10rpx;
  color: #ccd0db;
  font-size: 24rpx;
}

.goods-icon {
  position: relative;
}

.goods-icon image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.goods-icon button {
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0;
}

.details-text {
  width: 100%;
}

.content {
  width: 100%;
}

.img-ks-lazyload {
  width: 100%;
}

.tab-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
}

.tab-bottom {
  display: flex;
  align-items: center;
}

.tab-bottom .box {
  display: flex;
  flex-direction: column;
  width: 100rpx;
  text-align: center;
  font-size: 30rpx;
}

.tab-bottom .name {
  font-size: 22rpx;
}

.buttons {
  width: calc(100% - 300rpx);
  display: flex;
  align-items: center;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50rpx;
  overflow: hidden;
  color: #fff;
  font-size: 28rpx;
}
.firsh-button{
  flex: 1;
  height: inherit;
  background-color: yellowgreen;
}
.last-button{
  flex: 1;
  background-color: red;
}